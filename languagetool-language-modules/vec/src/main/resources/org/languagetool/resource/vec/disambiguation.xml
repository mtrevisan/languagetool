<rules lang="vec" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/resource/disambiguation.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<unification feature="number">
		<equivalence type="singular">
			<token postag=".*\+s.*" postag_regexp="yes"/>
		</equivalence>
		<equivalence type="plural">
			<token postag=".*\+p.*" postag_regexp="yes"/>
		</equivalence>
	</unification>

	<unification feature="gender">
		<equivalence type="masculine">
			<token postag=".*\+m.*" postag_regexp="yes"/>
		</equivalence>
		<equivalence type="femenine">
			<token postag=".*\+f.*" postag_regexp="yes"/>
		</equivalence>
	</unification>

	<unification feature="person">
		<equivalence type="first">
			<token postag=".*\+1.*" postag_regexp="yes"></token>
		</equivalence>
		<equivalence type="second">
			<token postag=".*\+2.*" postag_regexp="yes"></token>
		</equivalence>
		<equivalence type="third">
			<token postag=".*\+3.*" postag_regexp="yes"></token>
		</equivalence>
	</unification>

	<!-- ============================================================================================================== -->
	<!-- Personal Article and Proper Noun -->
	<!-- ============================================================================================================== -->

	<rule id="ADf-NNPf" name="ADf and NNPf agreement">
		<pattern>
			<marker>
				<token postag="AD.*\+f" postag_regexp="yes" />
			</marker>
			<token postag="J.*" postag_regexp="yes" min="0" max="2" />
<!--			<token postag="CN" min="0" max="1" />-->
			<token postag="NN.*\+f" postag_regexp="yes" min="0" max="1" />
			<token postag="NNP.*\+f" postag_regexp="yes" />
		</pattern>
		<disambig action="filterall" />
	</rule>

